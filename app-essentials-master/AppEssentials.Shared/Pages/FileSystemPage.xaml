<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppEssentials.Shared.Pages.FileSystemPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <StackLayout>
            <Button Clicked="ButtonTemplate_Clicked" Text="Load Template File" />
            <Label x:Name="LabelOutput" />

            <StackLayout Orientation="Horizontal" Spacing="6">
                <Button
                    Clicked="Load"
                    HorizontalOptions="FillAndExpand"
                    Text="Load" />
                <Button
                    Clicked="Save"
                    HorizontalOptions="FillAndExpand"
                    Text="Save" />
            </StackLayout>

            <Label Text="Edit the contents of the file:" />
            <Editor x:Name="CurrentContents" VerticalOptions="FillAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>